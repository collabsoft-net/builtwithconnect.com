{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run predeploy"
    ]
  },
  "hosting": {
    "public": "./public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api{,/**}",
        "function": "app"
      },
      {
        "source": "/favicon.ico",
        "destination": "/assets/icon.png"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 6001
    },
    "hosting": {
      "port": 6000
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": false
    }
  }
}
