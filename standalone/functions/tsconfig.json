{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "paths": {
      "API": [ "../../api/src" ],
      "API/*": [ "../../api/src/*" ],
      "*": [ "../../node_modules/*" ]
    },
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "./src/**/*.ts",
    "./typings/**/*.d.ts"
  ]
}
