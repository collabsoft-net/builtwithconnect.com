{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "rootDirs": [
      "./src",
    ],
    "paths": {
      "API": [ "../api/src" ],
      "API/*": [ "../api/src/*" ],
      "UI": [ "../frontend/src" ],
      "UI/*": [ "../frontend/src/*" ],
      "*": ["*", "../node_modules/*" ]
    },
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./typings/**/*.d.ts",
    "../typings/**/*.d.ts",
    "../frontend/typings/**/*.d.ts",
    "../node_modules/@collabsoft-net/**/*.d.ts"
  ],
  "compileOnSave": false
}